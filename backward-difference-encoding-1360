import pandas as pd
import numpy as np
import copy
import category_encoders as ce

hashes_fd = pd.read_csv('hashes-edit.csv')

hashes_fd.head()
print(hashes_fd.head())

hashes_fd_ce = hashes_fd.copy()

encoder = ce.BackwardDifferenceEncoder(cols=['hash'])
df_bd = encoder.fit_transform(hashes_fd_ce)

df_bd.head()
print(df_bd.head())

df_bd.to_csv('hashes_backward_difference_edit.csv', index=False)